---
import Button from "./Button.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
---

<header class="mt-3 mb-3 md:flex md:justify-between md:items-center">
  <Astronav closeOnClick>
    <div class="flex justify-between items-center">
      <a href="/"
        ><img src="/favicon.svg" alt="Home" width="40" height="40" /></a
      >
      <div class="md:hidden">
        <MenuIcon class="border-0 m-0 gap-3 text-lg bg-none" />
      </div>
    </div>
    <MenuItems class="hidden md:flex">
      <ul class="list-none flex flex-col md:flex-row items-center gap-3">
        <li>
          <a href="/#home">Home</a>
        </li>
        <li>
          <a href="/#about">About</a>
        </li>
        <li>
          <a href="/#skills">Skills</a>
        </li>
        <li>
          <a href="/#projects">Projects</a>
        </li>
        <li class="flex flex-col justify-between items-center relative">
          <a href="/contributions">Contributions</a>
          <!-- Temporary Badge New -->
          <div class="border-1 border-solid border-accent rounded-2xl absolute top-6"><p class="text-sm text-accent px-3 py-1">New</p></div>
        </li>
        <li>
          <a href="/contact">Contact</a>
        </li>
        <li>
          <Button>Resume</Button>
        </li>
      </ul>
    </MenuItems>
  </Astronav>
</header>

