---
import Main from "./main.astro";
import Prose from "../components/Prose.astro";
import SocialButtons from "src/components/SocialButtons.astro";
import { Image } from "astro:assets";

export interface Props {
  frontmatter: {
    title: string;
    description?: string;
    pubDate: Date;
    v1Data?: {
      devtoUrl: string;
      readingTimeMinutes: number;
      coverImage?: string;
    };
  };
}

const { frontmatter } = Astro.props;
---

<Main
  title={frontmatter.title}
  description={frontmatter.description}
  pubDate={frontmatter.pubDate}
>
  {
    Astro.originPathname.startsWith("/draft/") && (
      <div
        class="flex items-center p-4 mb-4 text-sm text-yellow-800 border border-yellow-300 rounded-lg bg-yellow-50"
        role="alert"
      >
        <svg
          class="flex-shrink-0 inline w-4 h-4 me-3"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z" />
        </svg>
        <div>
          <span class="font-semibold text-yellow-800">This is a draft</span>{" "}
          This page is not indexed by search engines and isn't gurantted will
          even make to production page.
        </div>
      </div>
    )
  }

  <div class="prose m-auto"><SocialButtons /></div>

  <!-- For older blogs that includes title in the markdown content -->
  {
    !frontmatter.v1Data && (
      <p class="prose m-auto italic mb-2 text-gray-500">
        Published on: {frontmatter.pubDate.toDateString()}
      </p>
    )
  }

  <article>
    <Prose>
      <!-- For newer blogs that doesn't include title in markdown content -->
      {
        frontmatter.v1Data && (
          <>
            {frontmatter.v1Data.coverImage && (
              <Image
                src={frontmatter.v1Data.coverImage}
                alt={frontmatter.title}
                width={655}
                height={274}
              />
            )}
            <h1>{frontmatter.title}</h1>
            <div class="flex justify-between w-full">
              <p class="italic text-gray-500 m-0">
                Published on: {frontmatter.pubDate.toDateString()}
              </p>

              <p class="italic text-gray-500 m-0">
                {frontmatter.v1Data.readingTimeMinutes} min read
              </p>
            </div>
          </>
        )
      }
      <slot />
    </Prose>
  </article>
</Main>
