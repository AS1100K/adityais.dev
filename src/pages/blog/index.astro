---
import Main from "@layout/main.astro";
import { readFileSync } from "fs";

interface BlogArticle {
  id: string;
  title: string;
  description: string;
  url: string;
  published_at: string;
  cover_image: string;
  tag_list: string[];
  reading_time_minutes: number;
  public_reactions_count: number;
  comments_count: number;
  source: string;
}

interface BlogData {
  articles: BlogArticle[];
}

// Read blog data from JSON file
let blogData: BlogData;
try {
  const blogJson = readFileSync("devto-blogs.json", "utf-8");
  blogData = JSON.parse(blogJson);
} catch (error) {
  console.error("Error reading blog data:", error);
  blogData = { articles: [] };
}

const blogs = blogData.articles || [];
const featuredBlog = blogs[0]; // Latest blog as featured
const otherBlogs = blogs.slice(1); // Rest of the blogs

function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}

function getReadingTime(minutes: number): string {
  return `${minutes} min read`;
}
---

<Main title="The Blog">
  <div class="max-w-7xl mx-auto px-4 py-8">
    <!-- Page Title -->
    <h1 class="text-5xl font-black text-center mb-12 text-gray-900">
      The Blog
    </h1>

    {
      featuredBlog && (
        <div class="mb-16">
          {/* Featured Blog Post */}
          <div class="relative overflow-hidden rounded-2xl shadow-2xl bg-gradient-to-r from-primary via-accent to-secondary p-1">
            <div class="bg-white rounded-xl overflow-hidden">
              <div class="md:flex">
                <div class="md:flex-shrink-0 md:w-2/5">
                  <img
                    class="h-64 w-full object-cover md:h-full"
                    src={featuredBlog.cover_image}
                    alt={featuredBlog.title}
                    loading="lazy"
                    onerror="this.src='/placeholder-blog.svg'"
                  />
                </div>
                <div class="p-8 md:w-3/5 flex flex-col justify-center">
                  <div class="text-sm text-gray-500 mb-2">
                    {formatDate(featuredBlog.published_at)}
                  </div>
                  <h2 class="text-3xl font-bold text-gray-900 mb-4 leading-tight">
                    {featuredBlog.title}
                  </h2>
                  <p class="text-gray-600 mb-6 text-lg leading-relaxed">
                    {featuredBlog.description}
                  </p>
                  <div class="flex items-center justify-between">
                    <div class="flex flex-wrap gap-2">
                      {featuredBlog.tag_list.slice(0, 3).map((tag: string) => (
                        <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm">
                          #{tag}
                        </span>
                      ))}
                    </div>
                    <div class="text-sm text-gray-500">
                      {getReadingTime(featuredBlog.reading_time_minutes)}
                    </div>
                  </div>
                  <a
                    href={featuredBlog.url}
                    class="mt-6 inline-flex items-center px-6 py-3 bg-gradient-to-r from-primary to-accent text-white font-semibold rounded-lg hover:from-primary hover:to-secondary transition-all duration-200 transform hover:scale-105"
                    target={
                      featuredBlog.source === "devto" ? "_blank" : "_self"
                    }
                    rel={
                      featuredBlog.source === "devto"
                        ? "noopener noreferrer"
                        : ""
                    }
                  >
                    Read Article
                    <svg
                      class="ml-2 w-4 h-4"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                        clip-rule="evenodd"
                      />
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      )
    }

    {
      otherBlogs.length > 0 && (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {/* Other Blog Posts Grid */}
          {otherBlogs.map((blog: BlogArticle) => (
            <article class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 transform hover:-translate-y-1">
              <div class="relative overflow-hidden">
                <img
                  class="w-full h-48 object-cover"
                  src={blog.cover_image}
                  alt={blog.title}
                  loading="lazy"
                  onerror="this.src='/placeholder-blog.svg'"
                />
                <div class="absolute top-4 left-4">
                  <span class="px-3 py-1 bg-white/90 backdrop-blur-sm text-gray-700 rounded-full text-sm font-medium">
                    {formatDate(blog.published_at)}
                  </span>
                </div>
              </div>
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-3 leading-tight line-clamp-2">
                  {blog.title}
                </h3>
                <p class="text-gray-600 mb-4 line-clamp-3 leading-relaxed">
                  {blog.description}
                </p>
                <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
                  <span>{getReadingTime(blog.reading_time_minutes)}</span>
                  <div class="flex items-center space-x-3">
                    {blog.public_reactions_count > 0 && (
                      <span class="flex items-center">
                        <svg
                          class="w-4 h-4 mr-1"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
                            clip-rule="evenodd"
                          />
                        </svg>
                        {blog.public_reactions_count}
                      </span>
                    )}
                    {blog.comments_count > 0 && (
                      <span class="flex items-center">
                        <svg
                          class="w-4 h-4 mr-1"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z"
                            clip-rule="evenodd"
                          />
                        </svg>
                        {blog.comments_count}
                      </span>
                    )}
                  </div>
                </div>
                <div class="flex flex-wrap gap-2 mb-4">
                  {blog.tag_list.slice(0, 2).map((tag: string) => (
                    <span class="px-2 py-1 bg-gray-100 text-gray-700 rounded text-xs">
                      #{tag}
                    </span>
                  ))}
                </div>
                <a
                  href={blog.url}
                  class="inline-flex items-center text-primary hover:text-accent font-semibold transition-colors duration-200"
                  target={blog.source === "devto" ? "_blank" : "_self"}
                  rel={blog.source === "devto" ? "noopener noreferrer" : ""}
                >
                  Read More
                  <svg
                    class="ml-1 w-4 h-4"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      )
    }

    {
      blogs.length === 0 && (
        <div class="text-center py-16">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">No blogs found</h2>
          <p class="text-gray-600">Check back later for exciting content!</p>
        </div>
      )
    }
  </div>
</Main>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
